<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Knihovna</title>

    <link rel="stylesheet" href="{$basePath}/assets/css/main.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous" defer></script>

    {asset? 'main.js'}
</head>

<body>
    <nav class="navbar navbar-light sticky-top bg-light p-2 mb-3">
        <div class="container-fluid justify-content-center">
            {if $user->isLoggedIn()}
                <span class="me-2">
                    Logged in as: <strong>{$user->identity->email}</strong> |
                    Role: <strong>{implode(', ', $user->roles)}</strong>
                </span>
                <a n:href="Sign:out" class="btn btn-outline-danger btn-sm">Log out</a>
            {else}
                <a n:href="Sign:in" class="btn btn-outline-primary btn-sm me-2">Log in</a>
                <a n:href="Register:default" class="btn btn-outline-success btn-sm">Register</a>
            {/if}
        </div>
    </nav>

    {foreach $flashes as $flash}
        {var $alertTypes = [
        'success' => 'alert-success',
        'error'   => 'alert-danger',
        'info'    => 'alert-info'
        ]}
        <div class="flash alert {$alertTypes[$flash->type] ?? 'alert-info'} container" role="alert">
            {$flash->message}
        </div>
    {/foreach}


    <div class="mb-4 container">
        {include content}
    </div>
</body>
</html>
